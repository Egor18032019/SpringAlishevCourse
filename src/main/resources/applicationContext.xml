<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans.xsd
        http://www.springframework.org/schema/context
        http://www.springframework.org/schema/context/spring-context.xsd">

    <!-- импортируем из файла .properies
        путь можно писать через location="classpath:musicPlayer.properties"-->
    <context:property-placeholder location="classpath:musicPlayer.properties"/>
    <!--    <bean id="testBean"-->
    <!--          class="org.springcourse.first.TestBean">-->
    <!--        <constructor-arg value="Egor"/>-->
    <!--    </bean>-->
    <bean id="musicBean"
          class="org.springcourse.first.ClassicalMusic"
          init-method="doMyInit"
          destroy-method="doMyDestroy"
    >
    </bean>
    <!--    <bean id="musicPlayer"-->
    <!--          class="org.springcourse.first.MusicPlayer">-->
    <!--        <constructor-arg ref="musicBean" />-->
    <!--    </bean>-->
        <bean id="musicPlayer"
              class="org.springcourse.first.MusicPlayer">
            <property name="music" ref="musicBean"/>
            <property name="name" value="${musicPlayer.name}" />
            <property name="volume" value="${musicPlayer.volume}" />
        </bean>

</beans>